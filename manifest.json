{
  "manifest_version": 3,
  "name": "Word Replacer TO BETTER!!",
  "version": "1.0",
  "description": "استبدال كلمات معينة في المواقع",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png" 
  }
}